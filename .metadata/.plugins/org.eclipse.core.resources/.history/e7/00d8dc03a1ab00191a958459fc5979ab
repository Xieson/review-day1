package com.chlp.team;

import java.util.Arrays;

/*
 * 知识:数组
 * 
 * 
 * */
public class Arraydome {
	public static void main(String[] args){
		int[] arr=new int[]{21,5,65,87,45,242,1,1,6548,76987,434,23,6565,67};
		System.out.println("数组的索引长度为:"+arr.length);
		System.out.println("数组中索引是4位置的值是:"+arr[4]);
		arr[2]=34;//把索引为2位置的值改为3
		for(int a:arr){//通过foreach循环把数组里的元素进行输出
			System.out.print(a+" ");
		}
		System.out.println();
		//输出数组的和
		double mun;
		mun=0.0;
		for(int i=0;i<=arr.length-1;i++){
			mun=mun+arr[i];	
		}
		System.out.println(mun);
		Arrays.sort(arr);//[排序
		for(int a:arr){//通过foreach循环把数组里的元素进行输出
			System.out.print(a+" ");
		}
		System.out.println();
		int a=Arrays.binarySearch(arr, 34);
		System.out.println("排序之后34位置的索引为:"+a);
		String y=Arrays.toString(arr);//将数组转换为在字符串,返回一个字符串变量,取名为y
		System.out.println(y);
	}
}
